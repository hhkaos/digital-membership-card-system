{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AMPA Issuer",
  "version": "0.1.0",
  "identifier": "org.ampanovaschoolalmeria.issuer",
  "build": {
    "beforeDevCommand": "npm run dev -- --host 127.0.0.1 --port 5174",
    "beforeBuildCommand": "npm run build:desktop",
    "devUrl": "http://localhost:5174/issuer/",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AMPA Issuer",
        "width": 1280,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Education",
    "shortDescription": "AMPA digital membership card issuer",
    "longDescription": "Desktop app for generating cryptographically signed AMPA digital membership cards.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ]
  }
}
